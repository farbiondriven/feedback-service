#  Makefile â€“ feedback-service
#â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

API_DIR     := apps/api
WORKER_DIR  := apps/worker
PRISMA      := npx prisma

.PHONY: install build dev dev-api dev-worker lint clean \
        db-generate db-migrate db-migrate-deploy docker-build docker-up docker-down

## ğŸ“¦  Install all workspaces and generate Prisma client
install:
	@echo "ğŸ“¦  Installing root + workspaces â€¦"
	npm install
	$(MAKE) db-generate

## ğŸ”¨  Compile TypeScript in every workspace
build: install
	@echo "ğŸ”¨  Building all packages â€¦"
	npm run --workspaces build

## ğŸš€  Start API (watch) â€“ open another terminal for the worker
dev: install
	npm --workspace $(API_DIR) run dev

## ğŸš€  Start only the API (watch)
dev-api: install
	npm --workspace $(API_DIR) run dev

## ğŸ›    Start only the worker (watch)
dev-worker: install
	npm --workspace $(WORKER_DIR) run dev

## ğŸ”  Lint every workspace
lint: install
	npm run --workspaces lint

## ğŸ—‘   Remove node_modules & build artefacts
clean:
	rm -rf node_modules */node_modules $(API_DIR)/dist $(WORKER_DIR)/dist

#â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
#  ğŸ—„ï¸  DATABASE (Prisma)
#â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

## Generate Prisma client (runs automatically in `make install`)
db-generate:
	$(PRISMA) generate

## Run development migration â€“ NAME=<name>  e.g. `make db-migrate NAME=add_column`
db-migrate:
ifndef NAME
	$(error You must pass NAME=<migration_name>)
endif
	$(PRISMA) migrate dev --name "$(NAME)"

## Deploy migrations in production / CI
db-migrate-deploy:
	$(PRISMA) migrate deploy

