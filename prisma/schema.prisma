datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native","debian-openssl-3.0.x"]
}

enum Sentiment {
  GOOD
  NEUTRAL
  BAD
  UNDETERMINED
}

model Text {
  id        Int       @id @default(autoincrement())
  content   String
  sentiment Sentiment @default(UNDETERMINED)
  createdAt DateTime  @default(now())
}
